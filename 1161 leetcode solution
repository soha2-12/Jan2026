from collections import deque

class Solution(object):
    def maxLevelSum(self, root):
        q = deque([root])
        max_sum = -10**9
        level = 1
        ans = 1

        while q:
            s = 0
            for i in range(len(q)):
                n = q.popleft()
                s += n.val
                if n.left:
                    q.append(n.left)
                if n.right:
                    q.append(n.right)

            if s > max_sum:
                max_sum = s
                ans = level
            level += 1

        return ans
