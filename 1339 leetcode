class Solution(object):
    def maxProduct(self, root):
        MOD = 1000000007
        self.ans = 0

        def total_sum(node):
            if not node:
                return 0
            return node.val + total_sum(node.left) + total_sum(node.right)

        S = total_sum(root)

        def dfs(node):
            if not node:
                return 0
            s = node.val + dfs(node.left) + dfs(node.right)
            self.ans = max(self.ans, s * (S - s))
            return s

        dfs(root)
        return self.ans % MOD
