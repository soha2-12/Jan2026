class Solution:
    def maxMatrixSum(self, matrix):
        total = 0
        min_abs = float('inf')
        neg_count = 0

        for row in matrix:
            for val in row:
                total += abs(val)        # sum of absolute values
                if abs(val) < min_abs:
                    min_abs = abs(val)  # smallest absolute value
                if val < 0:
                    neg_count += 1      # count negative numbers

        # If odd number of negatives, one must stay negative
        if neg_count % 2 == 1:
            total -= 2 * min_abs

        return total

# Example usage
matrix = [[1, -1, 2], [-3, 4, -2], [1, 5, -6]]
sol = Solution()
print sol.maxMatrixSum(matrix)  # Output: 24
